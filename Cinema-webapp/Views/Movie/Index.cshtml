@model IEnumerable<Cinema_webapp.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(to right, #1e1e2f, #3a3a5a);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    .movie-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 40px 20px;
    }

    .movie-card {
        background-color: #2c2c3a;
        flex: 1 1 250px;
        max-width: 300px;
        min-width: 230px;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .movie-card img {
            width: 100%;
            border-radius: 8px;
            height: auto;
        }

    .movie-info {
        text-align: center;
        margin-top: 15px;
    }

        .movie-info h2 {
            font-size: 1.5rem;
            color: #ffcc00;
            margin-bottom: 10px;
        }

        .movie-info p {
            font-size: 1rem;
            color: #ccc;
            margin-bottom: 10px;
        }

    .btn-custom {
        margin: 5px;
    }

    .modal-content {
        background-color: #2c2c3e;
        color: #ffffff;
    }

    .modal-header .btn-close {
        filter: invert(1);
    }

    .modal-title {
        color: #ffcc00;
    }

    @@media (max-width: 992px) {
        .movie-card {
            width: 45%;
        }
    }

    @@media (max-width: 576px) {
        .movie-card {
            width: 100%;
        }
    }
</style>

<div class="movie-grid">
    @foreach (var movie in Model)
    {
        var modalId = $"movieModal_{movie.Id}";
        var modalLabelId = $"movieModalLabel_{movie.Id}";

        <div class="movie-card">
            <img src="@Url.Content(movie.PosterUrl)" alt="movie poster" />
            <div class="movie-info">
                <h2>@movie.Title</h2>
                <p><strong>Жанр:</strong> @movie.Genre</p>

                <button class="btn btn-outline-light btn-custom"
                        data-bs-toggle="modal"
                        data-bs-target="#@modalId">
                    Детальніше
                </button>

                <a asp-action="Select" asp-controller="Movie" asp-route-id="@movie.Id" class="btn btn-warning btn-custom">
                    🎟️ Сеанси
                </a>
            </div>
        </div>

        <!-- Модальне вікно -->
        <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalLabelId" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="@modalLabelId">@movie.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                    </div>
                    <div class="modal-body">
                        <p>@Html.Raw(movie.Description)</p>
                        <p><strong>Тривалість:</strong> @movie.DurationMinutes хв</p>
                        <p><strong>Прем'єра:</strong> @movie.ReleaseDate.ToString("dd.MM.yyyy")</p>
                        <p><strong>IMDb:</strong> @movie.Rating</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
