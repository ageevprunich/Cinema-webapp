@model IEnumerable<Cinema_webapp.Models.Showtime>

@{
    ViewData["Title"] = "Сеанси";
}

<style>
    .showtime-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 40px 20px;
    }

    .showtime-card {
        background-color: #2c2c3a;
        flex: 1 1 250px;
        max-width: 320px;
        min-width: 230px;
        padding: 20px;
        border-radius: 15px;
        color: #fff;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }

        .showtime-card p {
            margin-bottom: 10px;
        }

    .btn-seat {
        margin-top: 10px;
    }
</style>

<div class="showtime-grid">
    @foreach (var showtime in Model)
    {
        <div class="showtime-card">
            <p><strong>Початок:</strong> @showtime.StartTime</p>
            <p><strong>Кінець:</strong> @showtime.EndTime</p>
            <p><strong>Зал #</strong> @showtime.HallId</p>
            <a class="btn btn-danger btn-seat" href="@Url.Action("Select", "Showtime", new { id = showtime.Id })">
                🎟 Місця
            </a>
        </div>
    }
</div>
